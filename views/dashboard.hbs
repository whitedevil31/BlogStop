<h6>dashboard</h6>
<h3>Hii {{name}}</h3>
<h6>These are your Blogs</h6>
{{#if blogs}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each blogs}}
        <tr>
            <td><a href="/blogs/{{_id}}">{{title}}</a></td>
               <td>{{ formatDate createdAt 'MMMM Do YYYY, h:mm:ss a' }}</td>
            <td><span class="dash-status">{{status}}</span></td>
              <td>
                <a href="/blogs/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>
                 <form action="/blogs/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
          
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any Blogs</p>
{{/if}}